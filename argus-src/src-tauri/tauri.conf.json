{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "argus-src",
  "version": "0.0.1",
  "identifier": "com.argus-src.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3133",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "argus",
        "width": 1080,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "freezePrototype": false,
      "capabilities": [
      ],
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$APPDATA/db/**",
            "$RESOURCE/**"
          ],
          "deny": [
            "$APPDATA/db/*.stronghold"
          ]
        }
      }
    }
  },
  "bundle": {
    "resources": {
      "../src-python/dist/app.exe": "service/argus-app.exe"
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    }
  }
}
